<h1>Welcome to Le Unicorn</h1>
<p>Where you can find your perfect Unicorn</p>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Available Unicorns</h3>
  </div>

  <div class="row">
    <% @unicorns.each do |unicorn| %>
      <div class="co-12 colsm-6 col-md-4">
        <% if unicorn.photo.key.present? %>
          <%= link_to unicorn_path(unicorn), class:'text-decoration-none' do %>
            <div class="card-category my-3" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path unicorn.photo.key, height: 300, crop: :fill %>')">
              <%= unicorn.name %>
              <div class="btn btn-warning count" >
              <%= pluralize(unicorn.movies.size, 'movie') %>
            </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
