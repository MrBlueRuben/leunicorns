      <% end %>
      </div>
  </div>

  <div class="u-descrip" >
    <strong><%= @unicorn.name %> </strong> <br>
    <%= @unicorn.species %> <br>
    <strong> Description</strong> <br>
    <%= @unicorn.description %> <br>
  </div>

  <div>
      <%= link_to 'Back to all Unicorns', unicorns_path %>
  </div>
</div>
