  <div class="u-photo" style="background-image: url('<%= cl_image_path @unicorn.photo.key, height: 300%>')">
  </div>

  <div class="r-info">
    <div class="names">
     <div class="uname"> <strong><%= @unicorn.name %> </strong></div>
      <div class="prices"> â‚¬<%=@unicorn.price%></div>
    </div>

    <div class="maps"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
